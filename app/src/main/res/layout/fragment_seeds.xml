<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeedsFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:background="@drawable/layout_border"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@drawable/sunflower_seed"></ImageView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Sunflower seeds"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:text="5 left"
                    android:textSize="16sp"
                    android:id="@+id/sunflower_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>


            <Button
                android:id="@+id/sunflower_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="10 TK"
                android:textSize="20sp"
                android:background="@drawable/button_background"/>

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:background="@drawable/layout_border"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@drawable/mango_seed"></ImageView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Mango seeds"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:id="@+id/mangoseeds_text"
                    android:text="2 left"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>


            <Button
                android:id="@+id/mangoseeds_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="20 TK"
                android:textSize="20sp"
                android:background="@drawable/button_background"/>

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:background="@drawable/layout_border"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@drawable/date_seed"></ImageView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Date seeds"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:id="@+id/date_text"
                    android:text="8 left"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>


            <Button
                android:id="@+id/date_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="20 TK"
                android:textSize="20sp"
                android:background="@drawable/button_background"/>

        </LinearLayout>




        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:background="@drawable/layout_border"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@drawable/pumpkin_seed"></ImageView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Pumpkin seeds"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:id="@+id/pumpkin_text"
                    android:text="4 left"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>


            <Button
                android:id="@+id/pumpkin_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="10 TK"
                android:textSize="20sp"
                android:background="@drawable/button_background"/>

        </LinearLayout>






    </LinearLayout>
</LinearLayout>